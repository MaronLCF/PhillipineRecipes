<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8b3d"
    android:orientation="vertical"
    tools:context=".RecipeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        app:cardCornerRadius="@dimen/loginCardRadius"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/backBtnAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/open_sans"
                android:text="Back"
                android:textColor="#0055FF" />

            <TextView
                android:id="@+id/recipeTitleTvAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Adobo"
                android:textColor="#000000"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipeAuthorTvAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:text="Author"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/recipeDateTvAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:gravity="right"
                    android:text="Date"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/foodImgIvAR"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/locationTvAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:text="Location"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/categoryTvAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:text="Category"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:id="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Description"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/recipeDescTvAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Ingredients"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/ingredientsTvAAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Steps"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/recipeStepsTvAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/open_sans"
                android:text="TextView"
                android:textColor="#000000" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</ScrollView>